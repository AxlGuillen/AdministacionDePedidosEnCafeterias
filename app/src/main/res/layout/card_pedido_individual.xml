<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#FF9800"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:id="@+id/imgComida"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/menu" />

        <TextView
            android:id="@+id/view_nombre"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imgComida"
            android:layout_toRightOf="@+id/imgComida"
            android:text="Nombre del Platillo"
            android:textColor="@color/black"
            android:textSize="18sp"
             />
        <TextView
            android:id="@+id/mony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="$"
            android:layout_toRightOf="@+id/imgComida"
            android:layout_below="@+id/view_nombre"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/view_precio"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Precio U"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/mony"
            android:layout_toRightOf="@+id/mony"
            android:layout_below="@+id/view_nombre"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Cantidad:"
            android:layout_toEndOf="@+id/view_precio"
            android:layout_below="@+id/view_nombre"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/view_cantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Unidad"
            android:layout_toEndOf="@+id/cantidad"
            android:layout_below="@+id/view_nombre"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/viewDet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_precio"
            android:layout_toEndOf="@+id/imgComida"
            android:layout_toRightOf="@+id/imgComida"
            android:text="Detalles"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>