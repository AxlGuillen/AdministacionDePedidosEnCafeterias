<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:backgroundTint="#9E8979"
        >

        <TextView
            android:id="@+id/nombre_Productos"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="nombre_Productos"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/view_correo"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nombre_Productos"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Fecha"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_fecha2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_id_pedido"
            android:layout_below="@+id/view_correo"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="12/04/2023"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_precio"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_correo"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Precio"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view_Precio2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view_fecha2"
            android:layout_below="@+id/view_precio"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="$150"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/view_id_pedido"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_Productos"
            android:text="id_Pedido"


            android:textColor="@color/black"
            android:textSize="12sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>