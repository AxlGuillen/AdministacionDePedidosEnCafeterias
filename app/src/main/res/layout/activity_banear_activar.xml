<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3D0"
    tools:context=".BanearActivar">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="415dp"
        android:layout_height="402dp"
        android:background="#816456"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:backgroundTint="#9C704F"
                app:icon="?attr/homeAsUpIndicator" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:text="Sistema manejo de usuarios"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="130dp"
            android:src="@mipmap/ic_launcher_foreground"
            app:srcCompat="@mipmap/ic_launcher_foreground"
            tools:srcCompat="@mipmap/ic_launcher_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="394dp"
        android:layout_height="287dp"
        android:layout_marginBottom="164dp"
        android:background="@drawable/fondo_texto"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/correo"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bordesyfondo"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordesyfondo"
            android:textAlignment="center" />

        <Switch
            android:id="@+id/estado2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bordesyfondo"
            android:text="Estado"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/actulizarCambios"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#9C704F"
        android:text="Actualizar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>